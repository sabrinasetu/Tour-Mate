<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"

    >
    <LinearLayout
      android:padding="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <EditText
          android:layout_marginTop="15dp"
          android:drawableLeft="@drawable/event_24dp"
          android:drawablePadding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/eventET"
          android:layout_marginBottom="15dp"
          android:hint="Travel Destination"
          android:padding="10dp"
          android:textColorHint="@color/black"
          android:background="@drawable/custom_edittext"
          android:inputType="text"/>
      <EditText
          android:focusable="false"
          android:drawableLeft="@drawable/ic_date_24dp"
          android:drawablePadding="10dp"
          android:layout_marginBottom="15dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/fromDateEt"
          android:hint="From Date"
          android:padding="10dp"
          android:textColorHint="@color/black"
          android:background="@drawable/custom_edittext"
          />
      <EditText
          android:focusable="false"
          android:drawableLeft="@drawable/ic_date_24dp"
          android:drawablePadding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:id="@+id/toDateEt"
          android:textColorHint="@color/black"
          android:hint="To Date"
          android:padding="10dp"
          android:background="@drawable/custom_edittext"
          />
      <EditText
          android:drawableLeft="@drawable/ic_attach_money_black_24dp"
          android:drawablePadding="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:id="@+id/estimatebudgetEt"
          android:textColorHint="@color/black"
          android:hint="Estimate Budget"
          android:padding="10dp"
          android:background="@drawable/custom_edittext"
          android:inputType="numberDecimal"/>
      <Button
              android:layout_marginTop="10dp"
              android:layout_gravity="center_horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/addEvent"
              android:text="Create"
              android:textAllCaps="false"
              android:background="@drawable/button_xml"
              android:textColor="@color/white"
              android:layout_marginBottom="10dp"

              />
    </LinearLayout>



</android.support.v7.widget.CardView>




